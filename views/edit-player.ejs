<div id="wrap" class="color1-inher">
        <% include partials/nav.ejs %>
    <!-- Main content -->
    <div id="wrap-body" class="p-t-lg-30">
        <div class="container">
            <div class="wrap-body-inner">
                <!-- Breadcrumb-->
                <div class="hidden-xs">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="ht-breadcrumb pull-left">
                                <li class="home-act"><a href="#"><i class="fa fa-home"></i></a></li>
                                <li class="active">Modification des informations du Profil</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <br/><br/>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                    <h4 class="product-name">INFORMATION PERSONNELLE</h4>
                    <hr/>
                    <div class="form-group col-md-6">
                            <label for="civilite">Sexe</label>
                            <select name="civilite" id="civilite" value="<%= player.civilite %>" class="form-control" >
                                <option selected disabled><%= player.civilite %></option>
                                <option>Féminin</option>
                                <option>Masculin</option>
                                <option>Non précisé</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                                <label for="situation">Etat Civil</label>
                                <select name="situation" id="situation" value="<%= player.situation %>" class="form-control"  >
                                    <option selected  disabled><%= player.situation %></option>
                                    <option>Autre</option>
                                    <option>Célibataire</option>
                                    <option>Marié(e)</option>
                                    <option>Divorcé(e)</option>
                                    <option>Séparé(e)</option>
                                    <option>Veuf(ve)</option>
                                </select>
                            </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Nom</label>
                    <input type="text" class="form-control" name="last_name" id="last_name" value="<%= player.lastname %>" >
                </div>
                <div class="form-group col-md-4">
                    <label for="first-name">Prénom</label>
                    <input type="text" class="form-control" name="first_name" id="first_name" value="<%= player.firstname %>" >
                </div>
                <div class="form-group col-md-4">
                        <label for="age">Age</label>
                        <input type="text" class="form-control" name="age" id="age" value="<%= player.age %>" >
                </div>
            </div>
                <div class="form-row">
                <div class="form-group col-md-4">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" name="email" id="email" value="<%= player.email %>"   >
                    </div>
                <div class="form-group col-md-4">
                        <label for="numtel">Numéro de Téléphone</label>
                        <input type="text" class="form-control" name="numtel" id="numtel" value="<%= player.numtel %>">
                </div>
                <div class="form-group col-md-4">
                        <label for="textprofil">Description</label>
                        <input type="text"  class="form-control" name="textprofil" id="textprofil" value="<%= player.TextProfil %>" >
                </div> 
            </div>


            <div class="form-row">
                    <h4 class="product-name">LOCALISATION</h4>
                    <hr/>
                <div class="form-group col-md-4">
                    <label for="adresse">Adresse</label>
                    <input type="text" class="form-control" name="adresse" id="adresse" value="<%= player.adresse %>"  >
                </div>
                <div class="form-group col-md-4">
                        <label for="ville">Ville</label>
                        <input type="text" class="form-control" name="ville" id="ville" value="<%= player.ville %>"  >
                </div>
                <div class="form-group col-md-4">
                        <label for="ville">Code Postal</label>
                        <input type="text" class="form-control" name="codepostal" id="codepostal" value="<%= player.codepostal %>" >
                </div>


                <h4 class="product-name">INFORMATION PROFESSIONNELLE</h4>
                <hr/>
                <div class="form-group col-md-6">
                    <label for="number">Annnée Experience</label>
                    <input type="number" class="form-control" name="number" id="number"  value="<%= player.experience %>">
                </div>
                <div class="form-group col-md-6">
                    <label for="position">Specialité</label>
                    <select id="position" name="position" value="<%= player.position %>" class="form-control">
                        <option selected><%= player.position %></option>
                        <option>J2EE</option>
                        <option>PHP</option>
                        <option>PHYTON</option>
                        <option>JAVA</option>
                        <option>ADMINISTRATION RESEAU</option>
                        <option>HIBERNATE</option>
                        <option>NODE JS/ VUE JS / REACT JS</option>
                        <option>LARAVEL</option>
                        <option>SYMFONY</option>
                        <option>SPRING</option>
                    </select>
                </div>
            <div class="form-group col-md-4">
                    <label for="nivetude">Niveau Etude</label>
                    <input type="text" class="form-control" name="nivetude" id="nivetude" value="<%= player.nivetude %>" >
                 </div>
            <div class="form-group col-md-4">
                    <label for="posteactuel">Poste Actuel</label>
                    <input type="text" class="form-control" name="posteactuel" id="posteactuel" value="<%= player.posteactuel %>">
                </div>
             
            <div class="form-group col-md-4">
                    <label for="renumeration">Rémunération</label>
                    <input type="text" class="form-control" name="renumeration" id="renumeration" value="<%= player.renumeration %>">
                </div>
                <div class="form-group col-md-4" style="float: right">
                    <br/>
                <button type="submit" class="btn btn-success float-right">Modifier Client</button>
                </div>   
            </div>
            
        </form>
        <br/><br/><br/><br/><br/>
        <div class="form-row">
        <div class="form-group col-md-4">
                <br/><br/><br/>
        <h4 class="product-name">COMMENTAIRE</h4>
        <hr/>
    </div>
</div>
        
            
            <table class="table table-hovered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ajouté Par</th>
                            <th scope="col">Date de création</th>
                            <th scope="col">Commentaire</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

        <% for(var i=0; i<(player.comm).length;i++){ %>
            <tr>
            <td><%= player.comm[i].user %></td>
            
            <td><%= moment(player.comm[i].createdAt).format('Do MMMM, YYYY') %> <%= moment(player.comm[i].createdAt).format("HH:mm") %></td>
            <td>
                    <form method="POST" action="/updateComment">
                    <input type="hidden" name="idComment" id="idComment" value="<%=player.comm[i].id %>"/>
                    <input type="hidden" name="idProfil" id="idComment" value="<%= player.id %>"/>
                    <input type="text" class="form-control" name="commentaire" id="commentaire" value="<%= player.comm[i].comment %>"/>
                    <br/>
                    <button type="submit" class="btn btn-success float-right">Modifier Commentaire</button>  
                    </form> 
                </td>
            <td>
                    <form method="POST" action="/deleteCom">
                    <input type="hidden" name="idPlayer" id="idPlayer" value="<%= player.id %>"/>
                    <input type="hidden" name="idComment" id="idComment" value="<%= player.comm[i].id %>"/>
                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button> 
                    <!--<a href="/deleteCom/<%= player.comm[i].id %>" class="btn btn-sm btn-danger">Delete</a>-->
                    </form>
                </td>
                </tr>
                   <% } %>
                    </tbody>
                    </table>
                           
                
    <% } else { %>
        
        <p class="text-center">Player Not Found. Go <a href="/add">here</a> to add players.</p>
    <% } %>
</div>
</div>
        </div>

<br/><br/><br/><br/><br/>
