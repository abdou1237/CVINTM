    <script type="text/javascript">
    function incrementValueappel()
{
    var value = parseInt(document.getElementById('appel').value, 10);
    value = isNaN(value) ? 0 : value;
    value++;
    document.getElementById('appel').value = value;
}
function decrementValueappel()
{
    var value = parseInt(document.getElementById('appel').value, 10);
    value = isNaN(value) ? 0 : value;
    value--;
    document.getElementById('appel').value = value;
}
function incrementValuevustringappel()
{
    var value = document.getElementById('appeler').value;
    value=(value=='oui') ? 'non': 'oui';
    document.getElementById('appeler').value = value;
}
